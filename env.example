# Configurações do Banco de Dados
# Use PostgreSQL local ou serviços na nuvem (Supabase, ElephantSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/medicalink

# Configurações da OpenAI
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configurações da Aplicação
DEBUG=True
HOST=127.0.0.1
PORT=8000

# Configurações de Segurança (opcional)
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:8080

# Configurações de Log (opcional)
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações de Rate Limiting (opcional)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
